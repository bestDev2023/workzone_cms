{
  "name": "my-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prettify": "prettier -w .",
    "bitbucket-api:generate-types": "oazapfts --exclude Pipelines bitbucket-api/swagger.json bitbucket-api/index.ts",
    "bitbucket-api:build": "tsc -p bitbucket-api && prepend bitbucket-api/dist/index.js '//@ts-nocheck\n'",
    "build": "./build.sh",
    "deploy:prepare": ": ${NODE_ENV:?\"Need to set NODE_ENV\"}; DEPLOY_DIR=\"./out/build\"; DEPLOY_DIR=$DEPLOY_DIR npm run deploy:prepare:ebextensions",
    "deploy:prepare:ebextensions": "mkdir -p $DEPLOY_DIR/.ebextensions/ && envsub --env-file $DEPLOY_DIR/.ebextensions/.env.$NODE_ENV --env NODE_ENV $DEPLOY_DIR/.ebextensions/options.config && rm $DEPLOY_DIR/.ebextensions/.env*",
    "lint:client": "eslint client",
    "lint:server": "eslint server",
    "prepare": "husky install; ./.configs"
  },
  "devDependencies": {
    "@babel/register": "~7.16.5",
    "@emotion/eslint-plugin": "~11.7.0",
    "@types/mocha": "~9.0.0",
    "@types/node": "~16.11.21",
    "@types/power-assert": "~1.5.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "assert": "~2.0.0",
    "babel-plugin-espower": "~3.0.1",
    "buffer": "~6.0.3",
    "cross-env": "~7.0.3",
    "deepmerge": "^4.2.2",
    "delay": "~5.0.0",
    "envsub": "^4.0.7",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-deprecation": "~1.3.2",
    "eslint-plugin-eslint-comments": "~3.2.0",
    "eslint-plugin-import": "~2.25.4",
    "eslint-plugin-promise": "~6.0.0",
    "eslint-plugin-react": "~7.28.0",
    "eslint-plugin-react-hooks": "~4.3.0",
    "eslint-plugin-rulesdir": "^0.2.1",
    "eslint-plugin-testing-library": "~5.0.3",
    "eslint-plugin-unicorn": "~40.1.0",
    "git-pull-run": "^1.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.0",
    "mocha": "~9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "nyc": "~15.1.0",
    "oazapfts": "^3.5.0",
    "p-defer": "~4.0.0",
    "power-assert": "~1.6.1",
    "prepend-file-cli": "^1.0.6",
    "prettier": "~2.5.1",
    "rollup": "^2.61.1",
    "testdouble": "~3.16.3",
    "ts-node": "~10.4.0",
    "ts-node-dev": "~1.1.8",
    "tsconfig-paths": "~3.12.0",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.2.0",
    "remeda": "^0.0.32"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,html,yml}": "prettier --write"
  }
}
