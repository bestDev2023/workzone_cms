{
  "name": "workzone-cloud-server",
  "version": "0.0.1",
  "description": "Workzone for Bitbucket cloud  - server side",
  "main": "server.ts",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --transpile-only src/main.ts & tsc -w --preserveWatchOutput --noEmit",
    "test:server": "nyc mocha src/**/*.spec.*",
    "build": "npm run build:clean && npm run build:compile && cp -rf ../bitbucket-api atlassian-connect.json config.json package.json package-lock.json out/dist/app && cd out/dist/app && npm i --production",
    "build:compile": "tsc -b tsconfig-prd.json",
    "build:clean": "rm -rf ./out/dist/",
    "build:rollup": "rollup -c",
    "build:api:generate-routes": "tsoa spec-and-routes",
    "build:api:generate-types": "oazapfts --exclude Pipelines out/generated/swagger.json client-api/index.ts; tsc -p client-api",
    "build:api": "npm run build:api:generate-routes && npm run build:api:generate-types",
    "start": "cd out/dist/app; node server/src/main.js",
    "start-bundled": "cd out/bundled; node server/src/main.js"
  },
  "author": "Izymes",
  "license": "ISC",
  "repository": "https://bitbucket.org/izymesdevteam/workzone-for-bitbucket-cloud/src",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.48.0",
    "@tsoa/runtime": "~3.13.0",
    "atlassian-connect-express": "~7.4.8",
    "atlassian-jwt": "^2.0.2",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "change-case": "~4.1.2",
    "date-fns": "~2.28.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "events": "~3.3.0",
    "express": "^4.17.2",
    "got": "~11.8.2",
    "got-fetch": "~3.0.1",
    "micromatch": "~4.0.4",
    "module-alias": "^2.2.2",
    "oazapfts": "~3.5.0",
    "optional-require": "^1.1.8",
    "pino": "^7.6.4",
    "pino-caller": "~3.2.0",
    "pino-http": "~6.6.0",
    "pino-pretty": "~7.5.0",
    "remeda": "~0.0.32",
    "wait-on": "^6.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@tsoa/cli": "^3.14.1",
    "@types/basic-auth": "^1.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "~4.17.13",
    "@types/micromatch": "~4.0.2",
    "@types/pino-http": "~5.8.1",
    "@types/swagger-ui-express": "~4.1.3",
    "@types/wait-on": "^5.3.1",
    "rewiremock": "~3.14.3",
    "rollup-plugin-typescript-paths": "^1.3.0",
    "swagger-ui-express": "~4.3.0",
    "type-fest": "~2.8.0",
    "typescript": "^4.5.4"
  }
}
